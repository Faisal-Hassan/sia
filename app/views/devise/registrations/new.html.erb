<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<% if params[:plan] == '2' %>
			<h1 class="text-center">Pro Account</h1>
		<% else %>
			<h1 class="text-center">Basic Account</h1>
		<% end %>
	</div>
	<div class="col-md-6 col-md-offset-3">
		<div class="well">
			<h2 class="text-center">Sign up</h2>
			
			<% if params[:plan] == '2' %>
				<%= render 'pro' %>
			<% else %>
				<%= render 'basic' %>
			<% end %>
			
		</div>
	</div>
</div>

